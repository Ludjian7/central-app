{
  "version": 2,
  "builds": [
    {
      "src": "api/handler.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/sales",
      "dest": "/api/handler.js"
    },
    {
      "src": "/api/products",
      "dest": "/api/handler.js"
    },
    {
      "src": "/api/finance/reports",
      "dest": "/api/handler.js"
    },
    {
      "src": "/api/dashboard/summary",
      "dest": "/api/handler.js"
    },
    {
      "src": "/api/health",
      "dest": "/api/handler.js"
    },
    {
      "src": "/api",
      "dest": "/api/handler.js"
    },
    {
      "src": "/api/(.*)",
      "dest": "/api/handler.js"
    },
    {
      "src": "/favicon.ico",
      "dest": "/public/favicon.ico"
    },
    {
      "src": "/manifest.json",
      "dest": "/public/manifest.json"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/public/index.html"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
